clear lock
clear control
clear Mod1
clear Mod4
clear Mod3

!!!!!!!!!!!!!!!
! CAPS LOCK -> CTRL_L
!!!!!!!!!!!!!!!
! 66 is x keycode for caps_lock on x220
! 58 is tty keycode for caps_lock on x220
! keysym Caps_Lock = Control_L
keycode 66 = Control_L

!!!!!!!!!!!!!!!
! ALT_L -> CTRL_L
!!!!!!!!!!!!!!!
! 64 is x keycode for Alt_L on x220
! 56 is tty keycode for Alt_L on x220
! keysym Alt_L = Control_L
keycode 64 = Control_L

!!!!!!!!!!!!!!!
! SUPER_L -> ALT_L
!!!!!!!!!!!!!!!
! 133 is x keycode for Super_L on x220
! 125 is tty keycode for Super_L on x220
! keysym Super_L = Alt_L
 keycode 133 = Alt_L


!!!!!!!!!!!!!!!
! CTRL_L -> MODE SWITCH
!!!!!!!!!!!!!!!
keycode 37 = Mode_switch

!!!!!!!!!!!!!!!
! This is default except for Mode_switch in third column
!!!!!!!!!!!!!!!
keycode 44 = j J Down
keycode 43 = h H Left
keycode 45 = k K Up
keycode 46 = l L Right
keycode 17 = 8 asterisk F8
keycode 30 = u U Prior
keycode 40 = d D Next
keycode 20 = minus underscore F11

!!!!!!!!!!!!!!!
! ALT_R -> HYPER
!!!!!!!!!!!!!!!
! keysym Alt_R = Hyper_L
keycode 108 = Hyper_L

add Mod1 = Alt_L Alt_R
add control = Control_L Control_R
add Mod3 = Hyper_L
