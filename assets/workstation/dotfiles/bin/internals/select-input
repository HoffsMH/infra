#!/bin/bash

# Read from stdin, if available
if [[ -p /dev/stdin ]]; then
    cat /dev/stdin
else
    # If no stdin, check if there are arguments passed after the first
    if [[ $# -gt 1 ]]; then
        # Shift off the first argument and print the rest
        shift
        echo "$@"
    else
        # If no arguments, get the content from the clipboard
        xclip -o -selection clipboard || echo ""
    fi
fi
