#!/bin/bash

if [ $# -eq 0 ]
  then
    clipboard=$(xclip -o -selection clipboard || echo "")
    selection=$(echo "$clipboard" || dmenu)
  else
    selection=$@
fi

capfile=$(t $(echo "$HOME/personal/00-capture/time/cap.md" | prefix name))

echo $selection >> $capfile

echo $capfile

nvim "$capfile"
