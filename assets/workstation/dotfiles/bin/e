# fi
#
# socketfile=$(echo "/tmp/nvimsocket-$directoryctx")
#
# echo "looking for socketfile $socketfile"
# if [ -S "$socketfile" ]; then
#   echo "found socket file"
#   if [ $1 = "."  ]; then
#     echo "already open"
