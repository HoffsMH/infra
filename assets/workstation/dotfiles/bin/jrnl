#!/bin/bash

jrnldir=~/personal/jrnl/
jrnlfile=~/personal/jrnl/jrnl.md

################################################################
# lock turns any jrnl.md into sub md files and tar and gpgs them
################################################################

$HOME/bin/jrnl.lock

################################################################
# unlock
################################################################

$HOME/bin/jrnl.unlock

pushd $jrnldir
  e.c $jrnlfile
popd
